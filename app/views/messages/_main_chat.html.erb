<div class="chat-top">
  <div class="chat-name">ChatName</div>
  <div class="chat-end"><a href="#">チャットを終了する</a></div>
</div>

<div class="chat-main">
  <div class="send-contents">
    <div class="upper-contents">
      <div class="send-user">Yuna</div>
      <div class="send-time">2022/5/23</div>
    </div>
    <div class="lower-contents">
      <div class="send-message">Good morning</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>